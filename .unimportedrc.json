{
  "entry": [
    "src/app/layout.tsx",
    "src/app/page.tsx",
    "src/app/api/**/*.ts",
    "src/components/ui/*/index.ts",
    "src/features/*/index.ts",
    "src/lib/utils.ts",
    "src/services/index.ts"
  ],
  "extensions": [".ts", ".tsx", ".js", ".jsx"],
  "ignorePatterns": [
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/*.d.ts",
    "**/*.config.*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/e2e/**",
    "**/scripts/**",
    "**/docs/**",
    "**/*.md"
  ],
  "ignoreUnresolved": [
    "react",
    "react-dom",
    "next",
    "next/*",
    "@/*",
    "lucide-react"
  ],
  "respectGitignore": true,
  "showPreset": "files",
  "cacheLocation": ".unimported"
}
