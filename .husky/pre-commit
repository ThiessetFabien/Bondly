echo "🔍 Validation du code avant commit..."

# Exécuter lint-staged pour formatter et vérifier le code
pnpx lint-staged

# Vérification TypeScript (optionnel)
echo "🔍 Vérification TypeScript..."
pnpm run type-check

# Analyse rapide du code mort sur les fichiers modifiés
echo "🔍 Analyse rapide du code mort..."
pnpm run lint:dead-code

echo "✅ Validation terminée!"
